<div class="container mt-5">
  <h1>Cocktail recipe for <strong><%= @cocktail.name %></strong></h1>

  <p><%= link_to '➕ Add an ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %></p>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.ingredient.name %>
    –
    <%= dose.description %>
    <% end %> </li>
  </ul>

  <br>
  <br>
  <p><%= link_to 'Back to list', cocktails_path, class: 'btn btn-dark' %></p>
</div>
