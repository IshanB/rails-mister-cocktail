<div class="container mt-5">

  <div class="row">

    <div class="col-md-8">
      <h1>Cocktail recipe for <strong><%= @cocktail.name %></strong></h1>

      <br>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter">
        âž• New ingredient
      </button>


      <!-- Modal -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <h1>Add ingredients to <strong> <%=@cocktail.name%> </strong></h1>
              <br>
                <%= simple_form_for [@cocktail, @dose] do |f| %>
                  <%= f.association :ingredient %>
                  <%= f.input :description %>
                <br>
                  <%= f.submit "âž• Add an ingredient", class: "btn btn-light" %>
                <% end %>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>


        <br>
        <br>
        <table class="table table-hover table-dark my-3">
          <thead>
            <tr>
              <th scope="col">Ingredient</th>
              <th scope="col">Description</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td><%= link_to 'ðŸ—‘', dose_path(dose), method: 'delete', data: { confirm: "Are you sure?" } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>

    <div class="col-md-4">
      <%= image_tag @cocktail.url, alt: "Cocktail illustration", class: "img-fluid" %>
    </div>

  </div>


</div>
